# Makefile for building python extensions
LIBFREEFARE=libfreefare
LIBFREEFARE_VERSION=0.4.0
LIBFREEFARE_TAR=$(LIBFREEFARE)-$(LIBFREEFARE_VERSION).tar.bz2
LIBFREEFARE_DIR=$(LIBFREEFARE)-$(VERSION)
LIBFREEFARE_URL=https://libfreefare.googlecode.com/files/$(LIBFREEFARE_TAR)
CURL=curl

$(LIBFREEFARE_DIR): $(LIBFREEFARE_TAR)
	tar xvjf $(LIBFREEFARE_TAR)
	
$(LIBFREEFARE_TAR):
	$(CURL) -o $(LIBFREEFARE_TAR) $(LIBFREEFARE_URL)